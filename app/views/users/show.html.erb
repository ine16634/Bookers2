<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
  <!-- ユーザーの詳細 -->
  <h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
   <tbody><tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    </tbody></table>
</div>
<div class="row">
    <%= link_to  edit_user_path(@user.id)  ,class:"btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i></i>
    <% end %>
</div>

<%= render 'books/new' %>
</div>


<!-- ユーザーの投稿一覧 -->
 <div class="col-md-8 offset-md-1">
  <h1>Books</h1>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>

      </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
         <td><%= image_tag book.user.get_profile_image(100,100) %></td>
         <td><%=link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  
 </div>


</div>
</div>
