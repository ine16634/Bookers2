<h1>投稿一覧</h1>

<div class="book-wrap">
  <table class="table-box">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>

      </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
         <td><%=link_to "Show", book_path(book.id) %></td>
         <td><%=link_to book.title, book_path(book.id) %></td>
         <td><%= book.opinion %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
  
  