<!-- ユーザーの詳細 -->
<%= render 'books/myinfo' %>
<%= render 'books/new' %>

<h1>Books</h1>

<div class="book-wrap">
  <table class="table-box">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>

      </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
         <td><%= image_tag book.user.get_profile_image(100,100) %></td>
         <td><%=link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
  
  