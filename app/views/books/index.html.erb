<h1>投稿一覧</h1>

<div class="book-wrap">
  <table class="table-box">
    <thead>  
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>
    
      </tr>
    </thead>
  
    <tbody>
    <% @books.each do |book| %>
      <tr>
         <td><span class="to_show"><%=link_to "Show", book_path(book.id) %></span></td>
         <td><span class="book-title"><%= book.title %></span></td>
         <td><span class="book-body"><%= book.opinion %></span></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>